<div class="card" style="max-width: 500px; margin: 2rem auto;">
  <h1 class="text-center mb-3">Edit Profile</h1>
  
  <%= form_with model: @user, url: profile_path, method: :patch, local: true do |form| %>
    <% if @user.errors.any? %>
      <div class="error-list">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :password, "New Password (leave blank to keep current)" %>
      <%= form.password_field :password, class: "form-control" %>
      <small style="color: #666;">Must be at least 9 characters with 1 uppercase, 1 lowercase, and 1 digit</small>
    </div>

    <div class="form-group text-center">
      <%= form.submit "Update Profile", class: "btn" %>
      <%= link_to "Cancel", dashboard_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
